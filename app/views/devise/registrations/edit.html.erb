<%= render 'shared/blog_header' %>
<div class="main-content">
  <section class="edit-blog-profile blog-list-main">
    <div class="container">
      <div class="edit-main-blog-profile">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="col-sm-12">
            <div class="row">
              <div class="bl-heading">
                <h2>Edit Profile</h2>
                <p>To change, complete the fields and click update</p>
              </div>
            </div>
          </div>
          <div class="edit-pro-sub-section">
            <div class="row">
              <div class="col-sm-12">
                <h3>General Details</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Change Profile Picture</label>
                  <div class="upload-file-all">
                    <input type="text" name="blog-feat-upload" class="form-control targetFileField" value="01.jpg" placeholder="Upload Featured Image" readonly>
                    <label class="uploadfile-field">
                      <input type="file" name="blogfeatimage" class="form-control">
                      <div class="upl-btn"><i class="fa fa-paperclip"></i></div>
                    </label>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Change Email</label>
                  <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="form-group">
                  <label>Change Location</label>
                  <input type="text" name="editlocation" class="form-control" value="Los Angelles" placeholder="Enter Location">
                </div>
              </div>
            </div>
          </div>
          <div class="edit-pro-sub-section">
            <div class="row">
              <div class="col-sm-12">
                <h3>Social Media Links</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Facebook Profile</label>
                  <input type="text" class="form-control" value="http://www.facebook.com" placeholder="Enter Facebook Id URL">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Twitter Profile</label>
                  <input type="text" class="form-control" value="http://www.twitter.com" placeholder="Enter Twitter Id URL">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Google Plus Profile</label>
                  <input type="text" class="form-control" value="http://plus.google.com" placeholder="Enter Google Plus Id URL">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Linkedin Profile</label>
                  <input type="text" class="form-control" value="http://www.linekdin.com" placeholder="Enter Linkedin Id URL ">
                </div>
              </div>
            </div>
          </div>
          <div class="edit-pro-sub-section">
            <div class="row">
              <div class="col-sm-12">
                <h3>Change Password</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-4">
                <div class="form-group">
                  <label>Old Password</label>
                  <%= f.password_field :current_password, class: "form-control", placeholder: "Enter Old Password" %>
                </div>
              </div>
              <div class="col-sm-4">
                <div class="form-group">
                  <label>New Password</label>
                  <%= f.password_field :password, class: "form-control", placeholder: "Enter New Password" %>
                </div>
              </div>
              <div class="col-sm-4">
                <div class="form-group">
                  <label>Confirm Password</label>
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm New Password" %>
                </div>
              </div>
            </div>
          </div>
          <div class="edit-pro-submit-btn">
            <div class="row">
              <div class="col-sm-12">
                <%= button_tag(type: 'submit', class: "btn btn-default") do %>
                  Update
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
<%= render 'shared/blog_footer' %>
