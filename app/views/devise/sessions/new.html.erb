<%= render 'shared/blog_header' %>
<div class="main-content">
  <section class="home-slider-sub signup-section">
    <div class="container">
      <div class="row">
        <div class="col-md-7">
          <div class="hss-cont">
            <h2>Sign In to watch award-winning short films all in one place.</h2>
            <p>Miniflix is the first to offer a curated library of award-winning VR and traditional short films all in one place.</p>
          </div>
        </div>
        <div class="col-md-5">
          <div class="signup-form">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Password</label>
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
              </div>
              <div class="row">
              <div class="col-xs-6">
                <div class="form-group">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot Password ?", new_password_path(resource_name), class: "forgot-pass-link" %>
                  <% end -%>
                </div>
              </div>
              <div class="col-xs-6">
                <%= button_tag(type: 'submit', class: "btn btn-default sign-in-btn pull-right") do %>
                  Sign In
                <% end %>
              </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%= render 'shared/blog_footer' %>