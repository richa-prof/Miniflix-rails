<%= render 'shared/blog_header' %>
  <div class="main-content">
    <section id="bs-pricing-five" class="home-slider-sub signIn-section">
      <div class="container">
        <div class="row">
          <div class="col-md-offset-3 col-md-6">
            <div class="hss-cont">
              <h2>Forgot Password?</h2>
              <span>Fill the details to complete the process.</span>
            </div>

            <% unless flash[:alert].blank? %>
              <div class="row">
                <div class="col-md-12">
                  <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%= flash[:alert] %>
                  </div>
                </div>
              </div>
            <% end %>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forgot-pass-form signup-form" }) do |f| %>
              <div class="form-group">
                <label for="forgot_email_">Name</label>
                <%= f.email_field :email, class: "form-control", id: "forgot_email_", placeholder: "Enter email", required: true %>
                <%= errors_for(f, :email) %>
              </div>
              <%= button_tag(type: 'submit', class: "btn btn-default") do %>
                Send me reset password instructions
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div>
<%= render 'shared/blog_footer' %>
