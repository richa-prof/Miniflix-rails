<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t('heading.genres') %>
  </h1>
  <ol class="breadcrumb">
    <%= link_to marketing_staff_seo_metas_path, method: :get do %>
      <i class="fa fa-th"></i> <span><%= t('heading.static_pages') %></span>
    <% end %>
    <li>  </li>
    <li class="active"><%= t('heading.show') %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <%= render( partial: 'shared/flash_notification', locals: { notice: notice } ) %>
          <div class="row">
            <div class="col-lg-10 col-xs-12">
              <h3 class="box-title">
                <%= t('heading.view_genre_seo_details') %>
              </h3>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <p>
            <strong><%= t('label.seo_meta.genres.browser_title') %></strong>
            <%= @seo_meta.browser_title %>
          </p>
        </div>

        <div class="box-body">
          <p>
            <strong><%= t('label.seo_meta.frontend_view_page_url') %></strong>
            <%= link_to @seo_meta.frontend_view_page_url, target: '_blank' do %>
              <%= @seo_meta.frontend_view_page_url %>
            <% end %>
          </p>
        </div>

        <div class="box-body">
          <p>
            <strong><%= t('label.seo_meta.genres.meta_description') %></strong>
            <%= @seo_meta.meta_description %>
          </p>
        </div>

        <div class="box-body">
          <p>
            <strong><%= t('label.seo_meta.genres.meta_keywords') %></strong>
            <%= @seo_meta.meta_keywords %>
          </p>
        </div>

      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->
