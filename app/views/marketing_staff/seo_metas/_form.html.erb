<h3><%= t('seo', scope: 'seo_meta.form') %></h3>

<div class="box-body">
  <div class="field form-group">
    <%= form.label :browser_title, t('seo_override_title', scope: 'seo_meta.form') %>
    <%= form.text_field :browser_title, class: 'widest form-control', placeholder: t('seo_override_title_help', scope: 'seo_meta.form'), required: true %>
  </div>
</div>

<div class="box-body">
  <div class="field form-group">
    <%= form.label :meta_description, t('meta_description_title', scope: 'seo_meta.form') %>
    <%= form.text_area :meta_description, class: 'widest form-control', rows: 5, placeholder: t('meta_description_help', scope: 'seo_meta.form'), required: true %>
  </div>
</div>

<div class="box-body">
  <div class="field form-group">
    <%= form.label :meta_keywords %>
    <%= form.text_field :meta_keywords, class: 'widest form-control', placeholder: t('placeholder.meta_keywords_help'), required: true %>
  </div>
</div>

<%= form.hidden_field :check_seo_meta_tags, value: "true" %>

<div class="form-group text-center">
  <%= form.submit 'Save', class: 'btn btn-primary btn-block' %>
</div>
