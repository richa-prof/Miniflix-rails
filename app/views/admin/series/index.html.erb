<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Series
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <%= render( partial: 'shared/flash_notification', locals: { notice: notice } ) %>
          <div class="row">
            <div class="col-lg-10 col-xs-12">
              <h3 class="box-title admin-box-title">
                <%= t('heading.listing_series_details') %>
              </h3>
            </div>
            <div class="col-lg-2 col-xs-12">
            <%# Change link to series_path %>
              <%= link_to( t('links.upload'),
                           new_admin_movie_path,
                           class: "btn btn-primary pull-right",
                           method: :get ) %>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body admin-box-body">
          <div class="row">
            <div class="col-md-12">
              <!-- general form elements -->
              <div class="box box-primary">
                <!-- /.box-header -->
                <div class="box-body">
                  <section id="no-more-tables">
                    <table id="tbl_admin_series" class="table table-bordered table-hover series-table">
                      <thead>
                        <tr>
                          <th><%= t('table.series.id') %></th>
                          <th><%= t('table.series.name') %></th>
                          <th><%= t('table.series.description') %></th>
                          <th><%= t('table.series.seasons') %></th>
                          <th><%= t('table.series.genre') %></th>
                          <th><%= t('table.series.directed_by') %></th>
                          <th><%= t('table.series.released_date') %></th>
                          <th><%= t('table.series.language') %></th>
                          <th><%= t('table.series.star_cast') %></th>
                          <th><%= t('table.series.action') %></th>
                        </tr>
                      </thead>

                      <tbody>
                        <tr>
                          <td data-title="Id">1</td>
                          <td data-title="Name">Lol</td>
                          <td data-title="Description">allallallalala</td>
                          <td data-title="Seasons">2</td>
                          <td data-title="Genre">Horror</td>
                          <td data-title="Directed by">Me, Lara Croft</td>
                          <td data-title="Released date">06.95.2022</td>
                          <td data-title="Language">English</td>
                          <td data-title="Star cast">Michael J.Fox, Christopher Lloyd</td>
                          <td data-title="Action" class="actions-td">
                          <%# Links to appropriate pages %>
                              <a href=""><i class="fa fa-fw fa-eye text-green"></i></a>
                              <a href=""><i class="fa fa-fw fa-edit text-blue"></i></a>
                              <a href=""><i class="fa fa-fw fa-trash text-red"></i></a>
                              <a href=""><i class="fa fa-file-text-o"></i></a>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </section>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->

<script>
  $(document).ready(function() {
    $('#tbl_admin_series').dataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "aoColumnDefs": [
        { 'bSortable': false, 'aTargets': [ 9 ] },
        { "bSearchable": false,"bVisible": false, "aTargets": [ 0 ] }
      ],
      "aaSorting": [[0, 'desc']]
    });
  });
</script>
