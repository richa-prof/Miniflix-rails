<script src="https://cdn.ckeditor.com/4.5.7/standard/ckeditor.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Visitor Users
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <% if !notice.blank? %>
            <div class="row">
              <div class="col-md-12">
                <div class="alert alert-success alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <%= notice %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-lg-10 col-xs-12">
              <h3 class="box-title">Listing Visitor Users</h3></div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body admin-box-body">
          <div class="row">
            <div class="col-md-12">
              <!-- general form elements -->
              <div class="box box-primary">
                <!-- /.box-header -->
                <div class="box-body">
                  <section id="no-more-tables">
                    <table id="tbl_admin_visitors" class="table table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Name</th>
                          <th>Email</th>
                          <th>School</th>
                          <th>Occupation</th>
                          <th>Action</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @visitors.each do |visitor| %>
                          <tr>
                            <td data-title="Id"><%= visitor.id %></td>
                            <td data-title="Name"><%= visitor.name %></td>
                            <td data-title="Email"><%= visitor.email %></td>
                            <td data-title="School"><%= visitor.school %></td>
                            <td data-title="Occupation"><%= visitor.occupation %></td>
                            <td data-title="Action">
                              <a href="" class="text-blue" data-toggle="modal" data-target="#myModalNorm" onclick="send_reply('<%= visitor.email %>',<%= visitor.id %>)">
                                <i class="fa fa-reply"></i></a>
                              <%= link_to admin_destroy_visitor_path(visitor.id), class: "text-red", method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <i class="fa fa-fw fa-trash"></i>
                              <% end %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </section>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->


<!-- Modal -->
<div class="modal fade" id="myModalNorm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
         <span aria-hidden="true">&times;</span>
         <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">
            Reply to user
        </h4>
      </div>
      
      <%= form_tag({}, {action: update_payment_info_users_path,:method => :post, :id => :frm_send_reply}) do |f| %>
      <!-- Modal Body -->
        <div class="modal-body">
            <div class="form-group">
              <label for="v_email">Visitor Email</label>
              <%= hidden_field_tag :v_id %>
              <%= text_field_tag :v_email, nil,class: "form-control", readonly: "true" %>
            </div>
            <div class="form-group">
              <label for="v_reply">Reply message</label>
              <%= text_area_tag :v_reply, nil, rows: 5, class: "form-control" %>
            </div>                        
        </div>
      
        <!-- Modal Footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"> Close </button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>      
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  function send_reply (email,v_id) {
    $("#v_email").val(email);
    $("#v_id").val(v_id);
  }
	$(document).ready(function() {
    $("#frm_send_reply").validate({
      rules: {
        "v_reply": {required: true}
      },
      messages: {
        "v_reply": {
          required: "Please enter a message for user."
        }
      }
    });
  	$('#tbl_admin_visitors').dataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "aoColumnDefs": [
        { 'bSortable': false, 'aTargets': [ 5 ] },
        { "bSearchable": false,"bVisible": false, "aTargets": [ 0 ] }
      ],
      "aaSorting": [[0, 'desc']]
    });
    // instance, using default configuration.
    CKEDITOR.replace('v_reply');
	});
</script>