<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t('heading.genres') %>
  </h1>
  <ol class="breadcrumb">
    <%= link_to admin_genres_path, method: "GET" do %>
      <i class="fa fa-th"></i> <span><%= t('heading.genres') %></span>
    <% end %>
    <li>  </li>
    <li class="active">show</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
    	  <% if !notice.blank? %>
            <div class="row">
              <div class="col-md-12">
                <div class="alert alert-success alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <%= notice %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-lg-10 col-xs-12">
              <h3 class="box-title">
                <%= t('heading.view_admin_genre_details') %>
              </h3>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
  			<p>
			  <strong>Name:</strong>
			  <%= @admin_genre.name %>
			</p>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->