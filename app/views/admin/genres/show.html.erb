<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t('heading.genres') %>
  </h1>
  <ol class="breadcrumb">
    <%= link_to admin_genres_path, method: :get do %>
      <i class="fa fa-th"></i> <span><%= t('heading.genres') %></span>
    <% end %>
    <li>  </li>
    <li class="active"><%= t('heading.show') %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <%= render( partial: 'shared/flash_notification', locals: { notice: notice } ) %>
          <div class="row">
            <div class="col-lg-10 col-xs-12">
              <h3 class="box-title">
                <%= t('heading.view_admin_genre_details') %>
              </h3>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <p>
            <strong>Name:</strong>
            <%= @admin_genre.name %>
          </p>
        </div>

        <div class="box-body">
          <p>
            <strong>Description:</strong>
            <%= @admin_genre.description %>
          </p>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->
