<section class="content-header">
  <h1>
    Admin Genres
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <% if !notice.blank? %>
            <div class="row">
              <div class="col-md-12">
                <div class="alert alert-success alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <%= notice %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-lg-12 col-xs-12">
              <h3 class="box-title">Add Caption Detail </h3>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body" id="upload_video">
          <%= render( partial: 'other_caption_info', locals: { admin_movie: @admin_movie,
                                                                 movie_caption: @movie_caption } ) %>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->