<div class="main-sidebar provider-sidebar pl20" style="padding-top: 0; height: 100%;">
  <div class="mt20 ml10 provider-sidebar-logo"><%= image_tag('provider/logo_sidebar.svg', alt: 'Miniflix sidebar logo icon')  %></div>
  <section class="sidebar provider-sidebar-menu">
    <ul class="sidebar-menu mt20">
      <li class="<%= 'active' if params[:controller] == 'provider/dashboard' %>">
        <%= link_to provider_dashboard_path, method: "GET" do %>
          <%= image_tag('provider/dashboard.svg', alt: 'dashboard icon', class: "icon provider-sidebar-icon")  %><span>Dashboard</span>
        <% end %>
      </li>

      <li class="<%= 'active' if controller_path == 'provider/movies' %>">
        <%= link_to provider_movies_path, method: :get do %>
          <%= image_tag('provider/movie.svg', alt: 'movie icon', class: "icon provider-sidebar-icon")  %><span><%= t('heading.movies') %></span>
        <% end %>
      </li>

      <li class="<%= 'active' if controller_path == 'provider/series' %>">
        <%= link_to provider_serials_path, method: :get do %>
          <%= image_tag('provider/serials.svg', alt: 'series icon', class: "icon provider-sidebar-icon")  %><span>Series</span>
        <% end %>
      </li>

      <li class="<%= 'active' if controller_path == 'provider/analytics' %>">
        <%= link_to provider_analytics_path, method: :get do %>
          <%= image_tag('provider/analytics.svg', alt: 'analytics icon', class: "icon provider-sidebar-icon")  %><span>Analytics</span>
        <% end %>
      </li>
    </ul>
  </section>
</div>
