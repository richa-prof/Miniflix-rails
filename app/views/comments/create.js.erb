$("#comments_<%= @blog.id %>").html("<%= j (render partial: 'blogs/comments', locals: { comments: @comments } ) %>");

<% if @comment.valid? %>
  $("#comment_body").val('');

  var commenterField = $("#comment_commenter");

  if (commenterField.length) {
    commenterField.val('');
  }
<% else %>
  <% error_message = @comment.errors.full_messages[0] %>
  var errorMessage = "<%= error_message %>";

  new PNotify({
    title: 'Error',
    text: errorMessage,
    buttons: {
      sticker: false
    }
  });

<% end %>
