<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <div style="font-size:12px;">
    <% if !flash[:error].blank? %>
      <label style="color: red;"><%= flash[:error] %></label>
    <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <h3 class="account-info">Payment Method</h3>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
       <div><mark> Your current payment method is <%= @user_payment_method.payment_type %>, if you want to change then choose other type. </mark> </div>
        <fieldset class="radios">
          <label class="label_radio pull-left" for="user_payment_method_payment_type_paypal">
            <%= f.radio_button :payment_type, "Paypal" %>
            <label> PayPal </label>
          </label>
          <label class="label_radio pull-left" for="user_payment_method_payment_type_card">
            <%= f.radio_button :payment_type, 'Card'%>
            <label> Card </label>
          </label>
          <div class="geo_trust">
            <script type="text/javascript" src="https://seal.geotrust.com/getgeotrustsslseal?host_name=miniflix.tv&amp;size=M&amp;lang=en"></script><br />
            <a href="http://www.geotrust.com/ssl/" target="_blank"  style="color:#000000; text-decoration:none; font:bold 7px verdana,sans-serif; letter-spacing:.5px; text-align:center; margin:0px; padding:0px;"></a>
          </div>
        </fieldset>
      </div>
    </div>
    <div id="card_info" style="display:none;">
      <b> Your card information given below edit if you want to update. </b>
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <div>
            <label> First Name </label>
          </div>
          <div>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <div>
            <label> Last Name </label>
          </div>
          <div>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class = "row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <div>
            <label>Card Number</label>
          </div>
          <div>
            <%= f.text_field :card_number,class: "form-control","data-stripe" => "number" %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
          <div>
            <label>Expiration Date</label>
          </div>
          <div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
              <div class="styleSelect">
                <%= f.select  :expiration_month, options_for_select(1..12, selected: @user_payment_method.expiration_month),{},{class: "units", "data-stripe": "exp-month"} %>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
              <div class="styleSelect styleSelectYear">
                <%= f.select :expiration_year, options_for_select(Time.now.year..Time.now.year+20, selected: @user_payment_method.expiration_year),{}, {class: "units", "data-stripe": "exp-year" }%>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
          <div>
            <label>Card CVC</label>
          </div>
          <div>
            <%= f.text_field :card_CVC,class: "form-control",:maxlength => 4, "data-stripe" => "cvv" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <label class="payment-errors error"></label>
      </div>
    </div>
    <div class="row" style="margin: 20px 0;">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col-md-4">
          <%= submit_tag  "Update Payment", id: "submit_plan_detail",class: "btn-personal" %>
        </div>
      </div>
    </div>
  </div>
</div>