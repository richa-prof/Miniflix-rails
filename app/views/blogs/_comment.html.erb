<div class="usr-comment-sub">
  <div class="usr-pro-pic">
    <% if comment.by_staff? %>
      <%= image_tag(staff_profile_image(comment.commenter_user)) %>
    <% else %>
      <%= image_tag (ImageUploader.new.default_url) %>
    <% end %>
  </div>
  <div class="usr-comment">
    <% if comment.by_staff? %>
      <% commenter_user = comment.commenter_user %>
      <%= link_to( profile_path_for( commenter_user ) ) do %>
        <h5 class="usr-pro-name">
          <%= commenter_user.name %>
        </h5>
      <% end %>
    <% else %>
      <%= link_to('javascript:void(0)') do %>
        <h5 class="usr-pro-name">
          <%= comment.commenter %>
        </h5>
      <% end %>
    <% end %>
    <p>
    	<%= comment.body %>
    </p>
  </div>
</div>