<div class="login-box">
  <div class="login-box-body">

    <div class="login-logo mb50">
      <div><%= image_tag('logo-black.png') %></div>
      
    </div>
      
    <h4 class="provider-registration">Registration</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.hidden_field :category, value: 'content_provider' %>

    <div>
      <section rel="stage1">
        <div class="field form-input-container mb35">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control", autocomplete: "name", placeholder: ' Enter your name' %>
        </div>

        <div class="field form-input-container mb35">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: ' Enter e-mail' %>
        </div>

        <div class="field form-input-container mb35">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, autocomplete: "phone", class: "form-control", placeholder: ' Specify phone number' %>
        </div>
      </section>

      <section rel="stage2" style="display: none">
        <div class="field form-input-container mb35">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: ' Specify password' %>
        </div>

        <div class="field form-input-container">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: ' Confirm password' %>
        </div>
      </section>
    </div>
   
    <div>
      <div class="actions registrations-actions" rel="stage1">
        <input type="button" class="btn btn-flat btn-black btn-block js-switch-section sign-in-btn" 
               value="Next" data-section="stage2" />
        <br />
        <div class="auth-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>

      <div class="actions registrations-actions" rel="stage2" style="display: none">
        <input type="button" class="btn btn-flat btn-black btn-block js-switch-section sign-in-btn"
               value="Prev" data-section="stage1" />
        &nbsp;
        <%= f.submit "Confirm", class: 'btn btn-flat btn-black btn-block sign-in-btn' %>
      </div>
    </div>

    <% end %>

    <br/>

  </div>
</div>

