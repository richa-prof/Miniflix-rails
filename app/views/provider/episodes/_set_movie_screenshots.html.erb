<% is_edit_mode = true %>

<div class="pt20">
  <div class="pull-left"><h4><%= t('label.movie.add_episode_screenshots') %></h4></div>
  <div class="pull-right" style="padding-top: 10px;">3/5 steps</div>
</div>

<div class="row mt40">

  <% 3.times do |n| %>
    <% ms = "movie_screenshot_#{n+1}".to_sym %>
    <div class="mt20">
      <div class="fileupload fileupload-new" data-provides="fileupload" style="width: 200px; margin: 0 auto;">
        <%= link_to("javascript:void(0);", class: 'movie-thumbnail-file-field-wrapper') do %>
          <div class="fileupload-new thumbnail">
            <%= render_thumbnail_image_for_episode(is_edit_mode, ms.to_s, thumbnail.try(ms)) %>
          </div>
        <% end %>
        <%= thumbnail_fields.file_field( ms,
                                         class: 'default movie-thumbnail-file-field',
                                         id: ms.to_s,
                                         accept: "image/*" ) %>
      </div>
    </div>
  <% end %>

</div>