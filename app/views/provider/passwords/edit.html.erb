<div class="login-box">

  <div class="login-box-body">
    <div class="login-logo mb50">
      <div><%= image_tag('logo-black.png') %></div>
    </div>
    <h4 class="login-box-msg mb35">Reset Password?</h4>
    <span>Fill the details to complete the process.</span>
    <br/><br/>

    <% unless flash[:alert].blank? %>
      <div class="row">
        <div class="col-md-12">
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= flash[:alert] %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="forgot-pass-form signup-form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <div>
            <label for="exampleInputEmail1"> Password </label><br>
            <%= f.password_field :password, autofocus: true, autocomplete: "off", required: true, placeholder: "Enter password", class: "form-control" %>
            <%= errors_for(f, :password) %>
          </div>
        </div>
        <div class="form-group">
          <div>
            <label for="exampleInputEmail1"> Confirm Password </label><br>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter Confirm password", class: "form-control", required: true %>
            <%= errors_for(f, :password_confirmation) %>
          </div>
        </div>
        <%= button_tag(type: 'submit',  data: {"disable-with": "Resetting ..."}, class: "btn btn-flat btn-black") do %>
          Reset Password
        <% end %>
      <% end %>
    </div>

  </div>
</div>