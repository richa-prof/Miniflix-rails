<div class="login-box">

  <div class="login-box-body">
    <div class="login-logo mb50">
      <div><%= image_tag('logo-black.png') %></div>
    </div>
    <h4 class="login-box-msg mb35">Forgot Password?</h4>
    <span>Fill the details to complete the process.</span>
    <br/><br/>

    <% unless flash[:alert].blank? %>
      <div class="row">
        <div class="col-md-12">
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= flash[:alert] %>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forgot-pass-form signup-form" }) do |f| %>
      <div class="form-group">
        <label for="forgot_email_">E-mail</label>
        <%= f.email_field :email, class: "form-control", id: "forgot_email_", placeholder: "Enter e-mail", required: true %>
        <%= errors_for(f, :email) %>
      </div>
      <%= button_tag(type: 'submit', data: {"disable-with": "Sending ..."}, class: "btn btn-flat btn-black") do %>
        Send me reset password instructions
      <% end %>
    <% end %>

  </div>
</div>
