<div class="row js-episode-upload-wrapper trailer-upload-wrapper"> <!-- FIXME  add number to sequence -->
  <div class="col-md-12">
    <div class="dropbox-advanced-upload"> <!-- do not change structure! -->
      <div class="file-upload">
        <%= multipart_uploader_form(
             input_name: 'episode_file',
             uploader: 'EpisodesUploader',
             button_class: 'video-submit-button m-t-15 hidden',
             button_text: 'Upload Movie',
             types: ["video/*"],
             html: %Q{} ) 
        %>
       <div class="dropbox-controls">Drag file here <br />or 
         <a class="js-video-browse">browse</a>
       </div>
      </div>
    </div>

    <div class="file-info" style="padding: 5px; <% unless movie&.film_video %> display: none; <% else %> margin-top: 10px; <% end %>">
      <%= render partial: 'file_info', locals: {movie: movie, category: 'episode'} %>
    </div>
  </div>
</div>
