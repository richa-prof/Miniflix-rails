<div id="s3-input-bucket-name-container" style="display: none;" 
     data-s3-input-bucket="<%= ENV['S3_INPUT_BUCKET'] %>"
     data-kind="movie">      
</div>

<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-body">
        <div class="row">
          <div class="col-md-12">
            <div class="alert alert-danger" id="error_msg" style="display: none;">
            </div>
            <div class="alert alert-success" id="success_msg" style="display: none;">
            </div>
          </div>
        </div>

        <div class="form-group">
          <label>Upload movie video</label>
        </div>
        <div class="row" style="display: none;" id="progress-bar">
          <div class="col-sm-11 col-xs-10">
            <!-- Progress bars -->
            <div class="progress">
              <div class="progress-bar progress-bar-green" id="v_u_progress_bar"></div>
            </div>
          </div>
          <div class="col-sm-1 col-xs-2 p-l-0" id="v_u_percent">
          </div>
        </div>
          <%= multipart_uploader_form( input_name: 'video_file',
                                       uploader: 'MoviesUploader',
                                       button_class: 'video-submit-button btn btn-primary m-t-15',
                                       button_text: 'Upload Movie',
                                       types: ["video/*"],
                                       html: %Q{} ) %>

      </div>
    </div>
  </div>
</div>
