<% movie = @provider_movie %>
<% thumbnail = movie.movie_thumbnail %>
<% is_edit_mode = local_assigns.has_key?(:is_edit_mode) ? is_edit_mode : false %>

<section class="content-for-provider p20">

<div class="row js-add-sshots-wrapper">

  <div class="col-lg-4 col-xs-12"></div>
  <div class="col-lg-4 col-xs-12 p20">

  <%= render partial: 'title_and_prev_link' %>
  
  <%#= form_with model: movie, scope: 'movie', url: provider_movie_path(movie, slug: movie.slug), method: :put, class: 'pt40', multipart: true do |f| %>
  <%= form_for movie, scope: :movie, url: wizard_path(:add_thumbnails, slug: movie.slug), method: :put, class: 'pt40', multipart: true do |f| %>

    <%= f.hidden_field :kind, value: movie.kind %>

    <div class="form-group">
        <div class="row">
          <div class="col-md-9 col-sm-12">

          <%= fields_for :movie_thumbnail, movie.movie_thumbnail, scope: :movie do |tf| %>
            <%= render( partial: 'set_movie_thumbnails', locals: {thumbnail_fields: tf, thumbnail: thumbnail, is_edit_mode: is_edit_mode } ) %>
          <% end %>

            <div class="form-footer pt20">
              <%= f.button 'Continue', class: "btn btn-flat btn-black", type: 'submit' %>
            </div>

          </div>
        </div>
    </div>



  <% end %>

  </div>

  <div class="col-lg-4 col-xs-12"></div>

</div>
</section>