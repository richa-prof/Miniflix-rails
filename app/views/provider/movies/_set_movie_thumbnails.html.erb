<label>
  <%= t('label.movie.add_movie_thumbnails') %>
</label>

<div class="row">
  <% [:thumbnail_screenshot, :thumbnail_640_screenshot, :thumbnail_800_screenshot].each do |thumb| %>
    <div class="mt20">
      <div class="fileupload fileupload-new" data-provides="fileupload" style="width: 200px; margin: 0 auto;">

        <%= link_to("javascript:void(0);", class: 'movie-thumbnail-file-field-wrapper') do %>
          <div class="fileupload-new thumbnail">
            <%= render_thumbnail_image_for( is_edit_mode, thumb.to_s, thumbnail.try(thumb) ) %>
          </div>
        <% end %>

        <%= thumbnail_fields.file_field(
                thumb,
                class: 'default movie-thumbnail-file-field',
                id: thumb.to_s,
                accept: "image/*" ) %>

        <label id="<%= thumb.to_s.gsub('screenshot', 'error') %>" class="cust_error" style="color: red;"></label>
      </div>
    </div>
  <% end %>
</div>
