  <div class="file-read-progress pull-left" style="display: none">
    <%= render partial: 'progress_bar_ring' %>
  </div>
  <div class="video-icon pull-left" style="width: 25px">
    <%= image_tag('provider/videofile.svg', alt: 'videofile icon', class: "icon")  %>
  </div>
  <div class="about-file pl20 pull-left" >
      <div>
      <% if movie&.film_video && category == 'video' %>
          <span class="js-file-name"><strong> <%= movie.film_video.split('%2F')[1] %> </span></strong>
          <span><%= movie.video_size %> bytes </span>
      <% elsif movie&.movie_trailer && category == 'trailer' %>
          <span class="js-file-name"><strong> <%= movie.movie_trailer.file.split('%2F')[1] %> </span></strong>
      <% end %>
     </div>
  </div>
  <div class="rm-file-control pull-right">
    <a title="Remove file"><%= image_tag('provider/delete.svg', alt: 'delete icon', class: "icon")  %></a>
  </div>

