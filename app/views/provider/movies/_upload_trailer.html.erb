<% is_edit_mode = local_assigns.has_key?(:is_edit_mode) ? is_edit_mode : false %>

<div id="trailer_upload_wrapper" class="row">
  <div class="col-md-12">

        <div class="row mt20">
          <div class="col-md-12">
            <div class="alert alert-danger" id="error_msg" style="display: none;">
            </div>
            <div class="alert alert-success" id="success_msg" style="display: none;">
            </div>
          </div>
        </div>

        <div class="">
          <label>
            <%= t('label.trailer') %>
          </label>
        </div>

        <div style="margin: 20px 0">
          <div class="dropbox-advanced-upload">
            <div class="file-upload">
              <%= multipart_uploader_form( 
                input_name: 'trailer_video_file',
                uploader: 'MovieTrailerUploader',
                button_class: 'movie-trailer-submit-btn hidden',
                button_text: t('label.upload_movie_trailer'),
                types: ["video/*"],
                html: %Q{} ) %>
              <div class="dropbox-controls">Drag file here or <a onclick="$('#trailer_video_file').click();">browse</a></div>
            </div>
          </div>
          <div class="file-info" style="padding: 5px; display: none;">
              <div class="file-read-progress pull-left hidden">
                <%= render partial: 'progress_bar_ring' %>
              </div>
              <div class="video-icon pull-left" style="width: 25px">
                <%= image_tag('provider/videofile.svg', alt: 'videofile icon', class: "icon")  %>
              </div>
              <div class="about-file pl20 pull-left" ></div>
              <div class="rm-file-control pull-right"><a title="Remove file"><%= image_tag('provider/delete.svg', alt: 'delete icon', class: "icon")  %></a></div>
            </div>
          </div>
        </div>

  </div>
</div>
