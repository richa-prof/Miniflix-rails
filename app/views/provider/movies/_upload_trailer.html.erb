<% is_edit_mode = local_assigns.has_key?(:is_edit_mode) ? is_edit_mode : false %>

<div id="s3-input-bucket-name-container" style="display: none;" data-s3-input-bucket="<%= ENV['S3_INPUT_BUCKET'] %>"></div>

<div id="movie-id-container"
     class="js-movie-paths"
     style="display: none;" 
     data-movie-id="<%= movie.id %>"
     data-trailer-upload-success-path="<%= save_uploaded_movie_trailer_admin_movies_path %>"
     data-is-edit-mode="<%= is_edit_mode %>">
</div>

<div id="trailed_upload_wrapper" class="row">
  <div class="col-md-12">

        <div class="row mt20">
          <div class="col-md-12">
            <div class="alert alert-danger" id="error_msg" style="display: none;">
            </div>
            <div class="alert alert-success" id="success_msg" style="display: none;">
            </div>
          </div>
        </div>

        <div class="">
          <label>
            <%= t('label.trailer') %>
          </label>
        </div>

        <div class="row" style="display: none;" id="progress-bar">
          <div class="col-sm-11 col-xs-10">
            <!-- Progress bars -->
            <div class="progress">
              <div class="progress-bar progress-bar-green" id="v_u_progress_bar"></div>
            </div>
          </div>
          <div class="col-sm-1 col-xs-2 p-l-0" id="v_u_percent">
          </div>
        </div>

        <div class="dropbox-advanced-upload">
          <div class="file-upload">
            <%= multipart_uploader_form( 
              input_name: 'trailer_video_file',
              uploader: 'MovieTrailerUploader',
              button_class: 'movie-trailer-submit-btn hidden',
              button_text: t('label.upload_movie_trailer'),
              types: ["video/*"],
              html: %Q{} ) %>
            <div class="dropbox-controls">Drag file here or <a onclick="$('#trailer_video_file').click();">browse</a></div>
          </div>
          <div class="file-info" style="display: none;">
            <div class="file-read-progress pull-left">
              <svg class="progress-ring" width="120" height="120">
                <circle class="progress-ring-circle" stroke="gray" stroke-width="4" fill="transparent" r="52" cx="60" cy="60"/>
              </svg>
            </div>
            <div class="about-file pl10 pull-left" ></div>
            <div class="rm-file-control">x</div>
          </div>
        </div>



  </div>
</div>
