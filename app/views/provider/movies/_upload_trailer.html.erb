<% is_edit_mode = local_assigns.has_key?(:is_edit_mode) ? is_edit_mode : false %>

<div id="s3-input-bucket-name-container" style="display: none;" data-s3-input-bucket="<%= ENV['S3_INPUT_BUCKET'] %>"></div>

<div id="movie-id-container" style="display: none;" data-movie-id="<%= movie.id %>" data-success-path="<%= save_uploaded_movie_trailer_admin_movies_path %>" data-is-edit-mode="<%= is_edit_mode %>"></div>

<div class="row">
  <div class="col-md-12">
    <div class="box box-primary trailer-upload-box">
      <div class="box-body">
        <div class="row">
          <div class="col-md-12">
            <div class="alert alert-danger" id="error_msg" style="display: none;">
            </div>
            <div class="alert alert-success" id="success_msg" style="display: none;">
            </div>
          </div>
        </div>

        <div class="form-group">
          <label>
            <%= t('label.upload_movie_trailer') %>
          </label>
        </div>
        <div class="row" style="display: none;" id="progress-bar">
          <div class="col-sm-11 col-xs-10">
            <!-- Progress bars -->
            <div class="progress">
              <div class="progress-bar progress-bar-green" id="v_u_progress_bar"></div>
            </div>
          </div>
          <div class="col-sm-1 col-xs-2 p-l-0" id="v_u_percent">
          </div>
        </div>
          <%= multipart_uploader_form( input_name: 'trailer_video_file',
                                       uploader: 'MovieTrailerUploader',
                                       button_class: 'movie-trailer-submit-btn btn btn-primary m-t-15',
                                       button_text: t('label.upload_movie_trailer'),
                                       types: ["video/*"],
                                       html: %Q{} ) %>
      </div>
    </div>
  </div>
</div>
