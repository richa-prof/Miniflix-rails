<div class="row">
  <div style="width: 150px; margin: 0 auto;">
    <label for="admin_movie_thumbnails" >
      <%= t('label.movie.add_screenshots') %>
    </label>
  </div>
</div>

<div class="row mt20">

  <% 3.times do |n| %>
    <% ms = "movie_screenshot_#{n+1}".to_sym %>
    <div class="mt20">
      <div class="fileupload fileupload-new" data-provides="fileupload" style="width: 200px; margin: 0 auto;">
        <%= link_to("javascript:void(0);", class: 'movie-thumbnail-file-field-wrapper') do %>
          <div class="fileupload-new thumbnail">
            <%= render_thumbnail_image_for(is_edit_mode, ms.to_s, thumbnail.try(ms)) %>
          </div>
        <% end %>
        <%= thumbnail_fields.file_field( ms,
                                         class: 'default movie-thumbnail-file-field',
                                         id: ms.to_s,
                                         accept: "image/*" ) %>
      </div>
    </div>
  <% end %>

</div>